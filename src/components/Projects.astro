---
import React from './icons/React.astro'
import JavaScript from './icons/JavaScript.astro'
import CSS from './icons/CSS.astro'
import HTML from './icons/HTML.astro'
import Redux from './icons/Redux.astro'
import Firebase from './icons/Firebase.astro'
const TAGS = {
  React: {
    name: 'Reactjs',
    class: 'bg-gray-800 text-sky-200',
    icon: React
  },
  JavaScript: {
    name: 'JavaScript',
    class: 'bg-gray-800 text-yellow-300',
    icon: JavaScript
  },
  HTML: {
    name: 'HTML5',
    class: 'bg-gray-800 text-orange-300',
    icon: HTML
  },
  CSS: {
    name: 'CSS',
    class: 'bg-gray-800 text-blue-300',
    icon: CSS
  },
  Redux: {
    name: 'Redux',
    class: 'bg-gray-800 text-purple-300',
    icon: Redux
  },
   Firebase: {
    name: 'Firebase',
    class: 'bg-gray-800 text-orange-200',
    icon: Firebase
  },

}
const PROJECTS = [
  {
    title: 'Netflix Clone',
    description: "A clone copying netflix's page. Created to practice React and Redux mainly.",
    link: 'https://netflixcloneportfolio.netlify.app/',
    github: 'https://github.com/Hagaren5/netflix_clone',
    image: '/projects/netflixClone.webp',
    tags: [TAGS.React,  TAGS.JavaScript , TAGS.Redux, TAGS.CSS, TAGS.HTML, TAGS.Firebase]
  }
]
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-purple-400/90">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row pb-4">
        {tags.map(tag => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-1`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <image class="rounded shadow-xl shadow-white/10" src={image} alt={`Screenshot from project ${image}`} />
    </article>
  ))
}
